  journal = {Annual Review of Phytopathology},
  number = {1}
}

@article{Godfray1997,
  title = {A Model of {{Nucleopolyhedrovirus}} ({{NPV}}) Population Genetics Applied to Co-Occlusion and the Spread of the Few Polyhedra ({{FP}}) Phenotype},
  author = {Godfray, H.C.J. and O'Reilly, D.R. and Briggs, C.J.},
  year = {1997},
  volume = {264},
  pages = {315--322},
