  keywords = {root-knot nematodes,disease resistance,local adaptation,fitness,populations,tomato,plant-resistance,variability,root-knot nematode,durable   resistance,evolution of virulence,globodera-pallida,host-Pathogen interaction,mi resistance gene,plant   resistance,trade-off},
