  booktitle = {Genomics and {{Molecular Genetics}} of {{Plant}}-{{Nematode Interactions}}},
  publisher = {{Springer Netherlands}},
  author = {Abad, Pierre and McCarter, James P.},
  editor = {Jones, John and Gheysen, Godelieve and Fenoll, Carmen},
  year = {2011},
  keywords = {Horizontal Gene Transfer,Parasitic Nematode,Plant Parasitic Nematode,Root Knot Nematode,Soybean Cyst Nematode},
  pages = {103-117},
  doi = {10.1007/978-94-007-0434-3_6}
}

