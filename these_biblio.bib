  author = {Brown, J. K. M. and Rant, J. C.},
  year = {2013},
  keywords = {Darwinian evolution,DELLA genes,disease escape,hybrid necrosis,Vertifolia effect,effector-triggered immunity},
  pages = {83-95}
}

@article{Tellier2011,
