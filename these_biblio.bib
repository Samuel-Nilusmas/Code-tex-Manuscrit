@article{Jeger1987,
  title = {The {{Influence}} of {{Root Growth}} and {{Inoculum Density}} on the {{Dynamics}} of {{Root Disease Epidemics}}: {{Theoretical Analysis}}},
  shorttitle = {The {{Influence}} of {{Root Growth}} and {{Inoculum Density}} on the {{Dynamics}} of {{Root Disease Epidemics}}},
