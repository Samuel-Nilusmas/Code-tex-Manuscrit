  number = {7515},
  journal = {Nature},
  author = {Karasov, Talia L. and Kniskern, Joel M. and Gao, Liping and DeYoung, Brody J. and Ding, Jing and Dubiella, Ullrich and Lastra, Ruben O. and Nallu, Sumitha and Roux, Fabrice and Innes, Roger W. and Barrett, Luke G. and Hudson, Richard R. and Bergelson, Joy},
  month = aug,
  year = {2014},
  keywords = {arabidopsis-thaliana,coevolution,disease resistance,evolution,genome-wide association,population,pseudomonas-syringae,selection,specificity,variance},
  pages = {436-U472},
  file = {files/510/Karasov et al. - 2014 - The long-term maintenance of a resistance polymorp.pdf}
}

