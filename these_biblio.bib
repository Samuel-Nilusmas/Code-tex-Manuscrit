  keywords = {Chromosomes; Artificial; Bacterial,Cloning; Molecular,Conserved Sequence,Evolution; Molecular,Genes; Plant,Genetic Variation,Haplotypes,Introns,Molecular Sequence Data,Multigene Family,Phylogeny,Plant Diseases,Plant Proteins,Solanum,Solvents},
