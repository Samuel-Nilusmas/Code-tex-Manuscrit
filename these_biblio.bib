@article{Castagnone-Sereno2007,
  title = {Selection and Parasite Evolution: A Reproductive Fitness Cost Associated with Virulence in the Parthenogenetic Nematode {{\em \emph{Meloidogyne}}} {\em \emph{incognita}}},
