  author = {Rimbaud, Loup and Papa\"ix, Julien and Rey, Jean-Fran{\c c}ois and Barrett, Luke G. and Thrall, Peter H.},
  month = apr,
  year = {2018},
  keywords = {Epidemiology,Pathogens,Plant pathogens,Crops,Evolutionary genetics,Fungal evolution,Host-pathogen interactions,Infectious disease epidemiology},
