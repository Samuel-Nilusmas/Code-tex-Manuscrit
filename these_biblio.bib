  keywords = {infectivity,durable resistance,phytophthora-infestans,disease resistance genes,qualitative resistance,plant-pathogens,mycosphaerella-graminicola,quantitative resistance,host-resistance,cultivar   mixtures,gene deployment strategies,life-history,nonhost resistance,pattern-recognition receptor,varietal mixtures},
