  keywords = {Hypertrophy,Morphogenetic reprogramming,Nematode feeding,Resistant interaction,Susceptible interaction},
  pages = {61-82},
  doi = {10.1007/978-94-007-0434-3_4}
}

@incollection{Nicol2011,
