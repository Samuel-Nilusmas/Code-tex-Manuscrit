  journal = {Front. Plant Sci.},
  author = {Thrall, Peter H. and Barrett, Luke G. and Dodds, Peter N. and Burdon, Jeremy J.},
  month = jan,
  year = {2016},
  keywords = {coevolution,coevolutionary dynamics,disease resistance,epidemiology,erysiphe-fischeri,flax rust,host-pathogen metapopulation,infection genetics,melampsora-lini,metapopulation,parasite local adaptation,pathogen infectivity,race-specific   resistance,spatial   variation,spatial structure},
