@article{Tankam-Chedjou2020,
  title = {Modelling and Control of a Banana Soilborne Pest in a Multi-Seasonal Framework},
  author = {{Tankam-Chedjou}, Isra{\"e}l and Touzeau, Suzanne and Mailleret, Ludovic and Tewa, Jean Jules and Grognard, Fr{\'e}d{\'e}ric},
  year = {2020},
  month = apr,
