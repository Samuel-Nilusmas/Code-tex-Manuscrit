  year = {2007},
  keywords = {drug-resistance,entomopathogenic nematodes,heterorhabditis,infection strategies,lipid reserves,parasite diversity,population biology,search strategies,selection experiment,steinernema,stochasticity,trade-off,transmission,transmission strategy,variability},
  pages = {675-684}
}

@article{Hamelin2011,
