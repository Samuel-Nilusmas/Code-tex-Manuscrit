  file = {files/474/Mundt - 2014 - Durable resistance A key to sustainable managemen.pdf;files/473/S1567134814000148.html}
}

@article{Parlevliet1981,
  title = {Stabilizing Selection in Crop Pathosystems: An Empty Concept or a Reality?},
  volume = {30},
  issn = {1573-5060},
